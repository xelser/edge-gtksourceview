<style-scheme id="edge" _name="Edge" version="1.0">
  <author>Axel Amores</author>
  <_description>Based on Sainnhe's Edge colorscheme</_description>

  <!-- Named Colors -->
  <color name="bg0"                  value="#FAFAFA"/>
  <color name="bg1"                  value="#EEF1F4"/>
  <color name="bg2"                  value="#E8EBF0"/>
  <color name="bg3"                  value="#E8EBF0"/>
  <color name="bg4"                  value="#DDE2E7"/>
  <color name="bg_blue"              value="#6996E0"/>
  <color name="bg_dim"               value="#E8EBF0"/>
  <color name="bg_green"             value="#76AF6F"/>
  <color name="bg_purple"            value="#BF75D6"/>
  <color name="bg_red"               value="#E17373"/>
  <color name="black"                value="#DDE2E7"/>
  <color name="blue"                 value="#5079BE"/>
  <color name="cyan"                 value="#3A8B84"/>
  <color name="diff_blue"            value="#E3EAF6"/>
  <color name="diff_green"           value="#E5EEE4"/>
  <color name="diff_red"             value="#F6E4E4"/>
  <color name="diff_yellow"          value="#F0ECE2"/>
  <color name="fg"                   value="#4B505B"/>
  <color name="gray"                 value="#8790A0"/>
  <color name="gray_dim"             value="#BAC3CB"/>
  <color name="green"                value="#608E32"/>
  <color name="purple"               value="#B05CCC"/>
  <color name="red"                  value="#D05858"/>
  <color name="yellow"               value="#BE7E05"/>

  <!-- Global Styles -->
  <style name="bracket-match"        foreground="purple"/>
  <style name="bracket-mismatch"     foreground="red"/>
  <style name="cursor"               foreground="fg"/>
  <style name="line-numbers"         background="bg_dim" foreground="gray_dim"/>
  <style name="search-match"         background="bg_blue" foreground="diff_blue" bold="true"/>
  <style name="selection"            background="gray_dim"/>
  <style name="text"                 background="bg0" foreground="fg"/>

  <!-- Defaults -->
  <style name="def:base-n-integer"   foreground="red"/>
  <style name="def:boolean"          foreground="green"/>
  <style name="def:character"        foreground="green"/>
  <style name="def:comment"          foreground="gray" italic="true"/>
  <style name="def:complex"          foreground="red"/>
  <style name="def:constant"         foreground="red"/>
  <style name="def:decimal"          foreground="red"/>
  <style name="def:deletion"         foreground="red"/>
  <style name="def:error"            foreground="red"/>
  <style name="def:floating-point"   foreground="red"/>
  <style name="def:function"         foreground="blue"/>
  <style name="def:identifier"       foreground="purple"/>
  <style name="def:keyword"          foreground="purple"/>
  <style name="def:net-address"      foreground="purple"/>
  <style name="def:note"             background="bg_blue" foreground="bg0" bold="true"/>
  <style name="def:number"           foreground="red"/>
  <style name="def:operator"         foreground="purple"/>
  <style name="def:preprocessor"     foreground="purple"/>
  <style name="def:shebang"          foreground="purple"/>
  <style name="def:special-char"     foreground="cyan"/>
  <style name="def:special-constant" foreground="cyan"/>
  <style name="def:string"           foreground="green"/>
  <style name="def:type"             foreground="yellow"/>
  <style name="def:warning"          foreground="yellow"/>

  <!-- sh -->
  <style name="sh:variable"          foreground="red"/>

  <!-- XML -->
  <style name="xml:attribute-name"   foreground="red"/>

</style-scheme>
